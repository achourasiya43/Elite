<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/very_light_gray"
    android:layout_marginTop="@dimen/_20sdp"
    android:layout_marginRight="@dimen/_10sdp"
    android:layout_marginBottom="@dimen/_10sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.github.siyamed.shapeimageview.CircularImageView
            android:id="@+id/mySideImage"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:src="@drawable/app_icon"
            app:siBorderColor="@color/green"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            app:siBorderWidth="0.5dp" />

        <TextView
            android:id="@+id/my_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimaryDark"
            android:layout_gravity="center"
            android:text="Hello Anil Chourasiya "
            android:gravity="center|left"
            android:padding="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_35sdp"
            android:layout_marginRight="@dimen/_45sdp"
            android:layout_alignParentRight="true"
            android:fontFamily="@font/lato_regular"
            android:layout_marginBottom="@dimen/_5sdp"
            android:textSize="@dimen/_12sdp"
            android:background="@drawable/rounded_primary_right_chat_border" />

        <com.github.siyamed.shapeimageview.RoundedImageView
            android:id="@+id/chat_my_image_view"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_150sdp"
            android:layout_marginLeft="@dimen/_35sdp"
            android:layout_marginRight="@dimen/_45sdp"
            android:src="@drawable/app_icon"
            app:siBorderWidth="1dp"
            android:layout_marginBottom="@dimen/_5sdp"
            app:siBorderColor="@color/green"
            android:layout_alignParentRight="true"
            android:scaleType="fitXY"
            android:visibility="gone"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/time_ago_"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="25/12/2017 800 pm"
        android:textColor="@color/light_gray"
        android:textSize="@dimen/_10sdp"
        android:layout_gravity="right"
        android:gravity="right|top"
        android:layout_marginTop="@dimen/_2sdp"
        android:fontFamily="@font/lato_regular"
        android:layout_marginRight="@dimen/_50sdp"/>

</LinearLayout>
