<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_75sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/very_light_gray">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <com.github.siyamed.shapeimageview.CircularImageView
            android:id="@+id/profile_img"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_gravity="center"
            app:siBorderColor="@color/green"
            app:siBorderWidth="0.5dp"
            android:src="@drawable/app_icon"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:layout_width="match_parent"
                android:layout_height=".3dp"
                android:background="@color/light_gray"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/_5sdp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center|left"
                android:layout_marginLeft="@dimen/_5sdp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Anil Chourasiya jfbfbsfjbsfjwbsfjsfbsjf"
                    android:layout_marginLeft="@dimen/_2sdp"
                    android:layout_marginBottom="@dimen/_2sdp"
                    android:layout_marginRight="@dimen/_80sdp"
                    android:textColor="@color/colorPrimaryDark"
                    android:fontFamily="@font/lato_regular"
                    android:maxLines="1"
                    android:textSize="@dimen/_13ssp"/>

                <TextView
                    android:id="@+id/looking_for"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Looking for MBBS"
                    android:textColor="@color/light_gray"
                    android:layout_marginLeft="@dimen/_2sdp"
                    android:layout_marginBottom="@dimen/_2sdp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_marginRight="@dimen/_35sdp"
                    android:maxLines="1"
                    android:fontFamily="@font/lato_regular"
                    android:textSize="@dimen/_11ssp"/>

                <TextView
                    android:id="@+id/new_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A new job post"
                    android:textColor="@color/light_gray"
                    android:layout_margin="@dimen/_2sdp"
                    android:fontFamily="@font/lato_regular"
                    android:textSize="@dimen/_11ssp"/>

            </LinearLayout>

            <TextView
                android:id="@+id/day_ago"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20 mins ago"
                android:gravity="center"
                android:layout_margin="@dimen/_10sdp"
                android:layout_alignParentTop="true"
                android:textSize="@dimen/_10ssp"
                android:fontFamily="@font/lato_regular"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>



    </LinearLayout>

</LinearLayout>
