<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_80sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/_5sdp"
    android:elevation="@dimen/_15sdp"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <com.github.siyamed.shapeimageview.CircularImageView
            android:id="@+id/profile_img"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            app:siBorderColor="@color/green"
            app:siBorderWidth="0.5dp"
            android:src="@drawable/app_icon"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center|left"
                android:layout_marginLeft="@dimen/_3sdp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Anil Chourasiya"
                    android:layout_marginLeft="@dimen/_2sdp"
                    android:layout_marginBottom="@dimen/_2sdp"

                    android:layout_marginRight="@dimen/_35sdp"
                    android:textColor="@color/colorPrimaryDark"
                    android:fontFamily="@font/lato_regular"
                    android:maxLines="1"
                    android:textSize="@dimen/_13ssp"/>


                <TextView
                    android:id="@+id/contect_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+1-9973527453"
                    android:textColor="@color/light_gray"
                    android:layout_margin="@dimen/_2sdp"
                    android:fontFamily="@font/lato_regular"
                    android:textSize="@dimen/_11ssp"/>

                <TextView
                    android:id="@+id/category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="looking for"
                    android:textColor="@color/light_gray"
                    android:layout_marginLeft="@dimen/_2sdp"
                    android:layout_marginBottom="@dimen/_2sdp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_marginRight="@dimen/_35sdp"
                    android:maxLines="1"
                    android:fontFamily="@font/lato_regular"
                    android:textSize="@dimen/_11ssp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Number of vacancies -"
                        android:textColor="@color/light_gray"
                        android:fontFamily="@font/lato_regular"
                        android:textSize="@dimen/_11ssp"/>

                    <TextView
                        android:id="@+id/vacancy_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2 person"
                        android:textColor="@color/colorPrimaryDark"
                        android:fontFamily="@font/lato_regular"
                        android:textSize="@dimen/_11ssp"/>



                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/chat_button"
                android:layout_width="@dimen/_23sdp"
                android:layout_height="@dimen/_23sdp"
                android:src="@drawable/chat_icon"
                android:padding="@dimen/_3sdp"
                android:layout_margin="@dimen/_3sdp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>



    </LinearLayout>



</android.support.v7.widget.CardView>