<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_90sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/_5sdp"
    android:elevation="@dimen/_5sdp"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <com.github.siyamed.shapeimageview.CircularImageView
            android:id="@+id/iv_doctor"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            app:siBorderColor="@color/green"
            app:siBorderWidth="0.5dp"
            android:src="@drawable/app_icon"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:gravity="center|left|top"
            android:layout_marginLeft="@dimen/_5sdp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Anil Chourasiya"
                android:layout_marginTop="@dimen/_3sdp"
                android:textColor="@color/colorPrimaryDark"
                android:fontFamily="@font/lato_regular"
                android:textSize="@dimen/_13ssp"/>

            <TextView
                android:id="@+id/contactNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+91-9981032734"
                android:layout_marginTop="@dimen/_3sdp"
                android:textColor="@color/light_gray"
                android:fontFamily="@font/lato_regular"
                android:textSize="@dimen/_11ssp"/>

            <TextView
                android:id="@+id/looking_for"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Looking for accounted"
                android:textColor="@color/light_gray"
                android:layout_marginTop="@dimen/_3sdp"
                android:fontFamily="@font/lato_regular"
                android:textSize="@dimen/_11ssp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_3sdp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Number of vacancies -"
                    android:textColor="@color/light_gray"
                    android:fontFamily="@font/lato_regular"
                    android:textSize="@dimen/_11ssp"/>

                <TextView
                    android:id="@+id/vacancy_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2 person"
                    android:textColor="@color/colorPrimaryDark"
                    android:fontFamily="@font/lato_regular"
                    android:textSize="@dimen/_11ssp"/>



            </LinearLayout>

            <TextView
                android:id="@+id/day_ago"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Just now"
                android:textColor="@color/colorPrimaryDark"
                android:fontFamily="@font/lato_regular"
                android:gravity="right"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/_5sdp"
                android:textSize="@dimen/_10ssp"
                android:layout_marginBottom="@dimen/_2sdp"/>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>