<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_300sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/_5sdp"
    android:layout_gravity="center">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_30sdp"
        app:cardCornerRadius="@dimen/_5sdp"
        app:cardUseCompatPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:background="@drawable/rounded_half_gray_border"
                android:textColor="@color/white"
                android:fontFamily="@font/lato_regular"
                android:textSize="@dimen/_14ssp"
                android:gravity="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:textSize="@dimen/_14ssp"
                android:textColor="@color/colorPrimaryDark"
                android:text="Are you sure want to finish this job."
                android:gravity="center"
                android:fontFamily="@font/lato_regular"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_16sdp"
                android:layout_marginRight="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textSize="@dimen/_14ssp"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="Finished by"
                    android:fontFamily="@font/lato_regular"/>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:elevation="@dimen/_5sdp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:background="@drawable/rounded_gray_border">

                        <ImageView
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:src="@drawable/drop_down_icon"
                            android:layout_marginRight="@dimen/_3sdp"
                            android:padding="@dimen/_3sdp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"/>

                        <Spinner
                            android:id="@+id/spinner"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null"
                            />


                    </RelativeLayout>

                </android.support.v7.widget.CardView>



                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginBottom="@dimen/_20sdp">

                    <TextView
                        android:id="@+id/tv_cancel_dialog_"
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:text="Cancel"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_14ssp"
                        android:gravity="center"
                        android:layout_centerVertical="true"
                        android:background="@drawable/rounded_solid_primarycolor"/>

                    <TextView
                        android:id="@+id/tv_done_"
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:text="Done"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_14ssp"
                        android:gravity="center"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:fontFamily="@font/lato_regular"
                        android:background="@drawable/rounded_solid_primarycolor"/>

                </RelativeLayout>



            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>


    <com.github.siyamed.shapeimageview.CircularImageView
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_60sdp"
        android:src="@drawable/app_icon"
        android:layout_gravity="center|top"
        app:siBorderWidth="@dimen/_5sdp"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:elevation="8dp"
        app:siBorderColor="@color/colorPrimaryDark"/>




</RelativeLayout>
